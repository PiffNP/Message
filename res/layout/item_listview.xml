<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.socks.zlistview.widget.ZSwipeItem
        android:id="@+id/swipe_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/contactDelButton"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_light"
            android:gravity="center" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/trash" />
        </LinearLayout>

		<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:padding="5dip" >

		    <ImageView
		        android:id="@+id/contactAvatar"
		        android:layout_width="50dip"
		        android:layout_height="50dip"
		        android:layout_alignParentLeft="true"
		        android:scaleType="fitCenter"
		        android:src="@drawable/icon" />

		    <LinearLayout
		        android:id="@+id/contactInfoLayout"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:orientation="vertical" >

		        <TextView
		            android:id="@+id/time"
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:layout_marginLeft="6dp"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:padding="2dip"
		            android:singleLine="true"
		            android:text="下午 16:45"
		            android:textSize="15dip" />

		        <TextView
		            android:id="@+id/bz"
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:layout_marginLeft="6dp"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:padding="2dip"
		            android:singleLine="true"
		            android:textSize="14dip" />
		    </LinearLayout>

		    <LinearLayout
		        android:id="@+id/linearLayout1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_toLeftOf="@+id/contactInfoLayout"
		        android:layout_toRightOf="@+id/contactAvatar"
		        android:orientation="vertical"
		        android:paddingLeft="8dip" >

		        <TextView
		            android:id="@+id/name"
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:padding="2dip"
		            android:singleLine="true"
		            android:text="Vivian"
		            android:textSize="15dip" />

		        <TextView
		            android:id="@+id/lastmsg"
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:padding="2dip"
		            android:singleLine="true"
		            android:text="hello"
		            android:textSize="14dip" />
		    </LinearLayout>

		    <TextView
		        android:id="@+id/unreadMark"
		        android:layout_width="27dip"
		        android:layout_height="27dip"
		        android:gravity="center"
		        android:text=""
		        android:textColor="#ffffff"
		        android:layout_alignTop="@+id/contactAvatar"
		        android:layout_toLeftOf="@+id/linearLayout1"
		        android:background="@drawable/red_dot" />
		</RelativeLayout>

    </com.socks.zlistview.widget.ZSwipeItem>

</LinearLayout>